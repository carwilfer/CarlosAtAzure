@model WebApp.Models.Pais.DetailsPaisViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>DetailsPaisViewModel</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            Foto País
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UrlFoto)
        </dd>
        @foreach (var estado in Model.Estados)
        {
            <dt class="col-sm-2">
                Estado:
            </dt>
            <dd class="col-sm-10">
                @estado
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
